<% layout("/layouts/boilerplate")%>
<div class="row mt-3 ">
  
    <div class="col-8 offset-2"> <h3><%= listing.title %></h3>
    </div>
   
    <div class=" listing-card col-6 offset-2">
      <div class="listing-card  " style="width: 18rem;">
        
        <img src="<%=listing.image.url%>" class="card-img-top show-img  " alt="listing_image">
        <div class="card-body"> 
          <p class="card-text">Owner :
            <b><%=listing.owner.username%></b></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">&#8377; <%= listing.price %></p>
            <p class="card-text"> <%= listing.location %></p> 
            <p class="card-text"> <%= listing.country %></p>
          </p>
        </div>
      </div>
    </div>
    
    <br />
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 mt-1 ">Edit</a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-4 mt-1">Delete </button>
      </form>
    </div>
    
  </div>

  <div class="offset-2">
    <hr>
    <h3>Give Review</h3>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation" >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-lable">Rating</label>
        <input type="range" min="1" max="5" name="review[rating]" class="form-range">
      </div>
      <br>
      <div  class="mb-3 mt-3">
        <label for="comment" class="form-lable">Comment</label>
        <textarea name="review[comment]" id="comment" cols="15" rows="10" class="form-control" required></textarea>
        <div class="invalid-feedback">write comment</div>
      </div>
      <br>
      <button class="btn btn-dark">Submit</button>
    </form><br><br>
<p><b>All Reviews</b></p>
<div class="row">
<% for (review of listing.reviews) {%>
 <div class="card col-5 mb-3 ms-3">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text"><%= review.comment %></p>
    <p class="card-text">
      <b>Rating</b>
      <%= review.rating %> Star</p>
  </div>
  <form method="POST" action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE" class="mb-3">
    <button class="btn btn-dark "> Delete</button>
  </form>
 </div>
 <%}%>
</div>
  </div>

